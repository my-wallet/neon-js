{
  "name": "@cityofzion/neon-core",
  "description": "Neon-JS Core functionality",
  "version": "3.7.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/neon-js.git"
  },
  "keywords": ["neo", "antshares", "javascript", "libraries"],
  "author":
    "Yak Jun Xiang <snowypowers@gmail.com> (https://github.com/snowypowers)",
  "license": "MIT",
  "main": "lib/index.js",
  "browser": "lib/browser.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "test": "mocha ./test && npm run test:typings",
    "test:unit": "mocha ./test/unit",
    "test:integration": "mocha ./test/integration",
    "test:typings": "tsc",
    "cover":
      "cross-env NODE_ENV=test nyc mocha ./test && nyc report --reporter=lcov",
    "cover:unit":
      "cross-env NODE_ENV=test nyc mocha ./test/unit && nyc report --reporter=lcov",
    "cover:integration":
      "cross-env NODE_ENV=test nyc mocha ./test/integration && nyc report --reporter=lcov",
    "lint": "eslint ./src/**/*.js ./test/**/*.js",
    "build:dev": "cross-env NODE_ENV=development webpack --mode development",
    "build:prod": "cross-env NODE_ENV=production webpack --mode production",
    "watch:test": "mocha ./test/unit --bail --watch --reporter=min",
    "watch:docs": "cd website && npm run start",
    "build:docs": "cd website && npm run build",
    "deploy:docs": "cd website && npm run publish-gh-pages",
    "rebuild": "rm -rf ./node_modules && npm install && webpack",
    "prepublishOnly":
      "npm run test:typings && npm run lint && npm run build:prod"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bignumber.js": "5.0.0",
    "bs58": "^4.0.1",
    "bs58check": "^2.1.1",
    "crypto-js": "^3.1.9-1",
    "elliptic": "^6.4.0",
    "js-scrypt": "^0.2.0",
    "loglevel": "^1.6.1",
    "loglevel-plugin-prefix": "^0.8.3",
    "scrypt-js": "^2.0.3",
    "secure-random": "^1.1.1",
    "semver": "^5.5.0",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "@types/loglevel": "^1.5.3",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.46",
    "@babel/polyfill": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46"
  },
  "files": ["lib/", "src/"],
  "nyc": {
    "require": ["babel-register"],
    "exclude": ["test"],
    "sourceMap": false,
    "instrument": false
  }
}
